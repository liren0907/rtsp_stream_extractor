{
    "input_directories": [
        "data/long_data"
    ],
    "output_directory": "output",
    "output_prefix": "processed",
    "num_threads": 4,
    "output_fps": 30,
    "frame_interval": 30,
    "extraction_mode": "opencv",
    "create_summary_per_thread": false,
    "video_creation_mode": "direct",
    "processing_mode": "sequential",
    "hardware_acceleration": {
        "enabled": true,
        "mode": "auto",
        "fallback_to_cpu": true,
        "prefer_backends": ["avfoundation", "ffmpeg", "any"]
    }
}
